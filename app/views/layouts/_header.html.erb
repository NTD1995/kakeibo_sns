<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%# ユーザーログイン時のヘッダー %>
          <% if user_signed_in? && !admin_signed_in? %>
            <li>
              <%= link_to root_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-house"></i> ホーム
              <% end %>
            </li>  
            <li>
              <%= link_to mypage_path, class:"nav-link text-light" do%>                     
                <i class="fa-regular fa-user"></i> マイページ
              <% end %>  
            </li>             
            <li>
              <%= link_to posts_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen"></i> 投稿一覧
              <% end %>  
            </li>             
            <li>
              <%= link_to users_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-users"></i> ユーザー一覧
              <% end %> 
            </li> 
            <li>
              <%= link_to user_favorites_path(current_user), class:"nav-link text-light" do%>
                <i class="fa-solid fa-thumbs-up"></i> いいね一覧
              <% end %>  
            </li> 
            <li>
              <%= link_to new_post_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen-nib"></i> 新規投稿
              <% end %>    
            </li>             
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do%>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li> 
            <li>
              <%# 検索フォーム表示 %> 
              <%= render 'public/searches/form' %>           
            </li>
            <%# タグ検索フォーム表示 %> 
            <div class="search_form">
              <%= form_with url: "#" do |form| %>
                <%= form.text_field :keyword, placeholder: "search" %>
                <i class="fa-solid fa-tag"></i>
              <% end %>
            </div>         

          <%# 管理者ログイン時のヘッダー %>
          <% elsif admin_signed_in? %>          
            <li>
              <%= link_to root_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-house"></i> ホーム
              <% end %>
            </li>    
            <li>
              <%= link_to admin_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen"></i> 投稿一覧
              <% end %>  
            </li>                       
            <li>
              <%= link_to admin_users_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </li> 
            <li>
              <%= link_to admin_favorites_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-thumbs-up"></i> いいね一覧
              <% end %>
            </li> 
            <li>
              <%= link_to admin_items_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-list"></i> 項目一覧・新規追加
              <% end %>  
            </li>             
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do%>            
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>  
            </li> 
            <li>
              <%# 検索フォーム表示 %> 
              <%= render 'admin/searches/form' %>           
            </li>
            <%# タグ検索フォーム表示 %> 
            <div class="search_form">
              <%= form_with url: "#" do |form| %>
                <%= form.text_field :keyword, placeholder: "search" %>
                <i class="fa-solid fa-tag"></i>
              <% end %>
            </div>

          <%# ユーザー非ログイン時のヘッダー %>
          <% else %>
            <li>
              <%= link_to root_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-house"></i> ホーム
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-info"></i>  アバウト
              <% end %>
            </li>
            <li>
              <%= link_to posts_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen"></i> 投稿一覧
              <% end %>  
            </li>
            <li>
              <%= link_to new_user_registration_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-user-plus"></i> 新規登録
              <% end %>
            </li>             
            <li>
              <%= link_to new_user_session_path, class:"nav-link text-light" do%>              
                <i class="fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li> 
          </ul>
        <% end %>

      </div>
    </div>
  </nav>
</header>