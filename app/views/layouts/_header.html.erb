<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%# ユーザーログイン時のヘッダー %>
          <% if user_signed_in? && !admin_signed_in? %>
            <li>
              <%= link_to root_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-house"></i> ホーム
              <% end %>
            </li>  
            <li>         
                <i class="fa-regular fa-user"></i> マイページ
            </li>             
            <li>
              <%= link_to posts_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen"></i> 投稿一覧
              <% end %>  
            </li>             
            <li>
                <i class="fa-solid fa-users"></i> ユーザー一覧
            </li> 
            <li>
                <i class="fa-solid fa-thumbs-up"></i> いいね一覧

            </li> 
            <li>
              <%= link_to new_post_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen-nib"></i> 新規投稿
              <% end %>    
            </li>             
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do%>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li> 

          <%# 管理者ログイン時のヘッダー %>
          <% elsif admin_signed_in? %>          
            <li>
              <%= link_to root_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-house"></i> ホーム
              <% end %>
            </li>    
            <li>
              <%= link_to posts_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen"></i> 投稿一覧
              <% end %>  
            </li>             
            <li>
              <i class="fa-solid fa-users"></i> ユーザー一覧
            </li> 
            <li>
              <i class="fa-solid fa-thumbs-up"></i> いいね一覧
            </li> 
            <li>
              <i class="fa-solid fa-list"></i> 項目一覧・新規追加
            </li>             
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do%>            
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>  
            </li> 

          <%# ユーザー非ログイン時のヘッダー %>
          <% else %>
            <li>
              <%= link_to root_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-house"></i> ホーム
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-info"></i>  アバウト
              <% end %>
            </li>
            <li>
              <%= link_to posts_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-pen"></i> 投稿一覧
              <% end %>  
            </li>
            <li>
              <%= link_to new_user_registration_path, class:"nav-link text-light" do%>
                <i class="fa-solid fa-user-plus"></i> 新規登録
              <% end %>
            </li>             
            <li>
              <%= link_to new_user_session_path, class:"nav-link text-light" do%>              
                <i class="fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li> 
