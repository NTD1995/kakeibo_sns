        <%# 検索フォーム表示 %> 
        <div class="search_form">
          <%= form_with url: "#" do |form| %>
            <%= form.text_field :keyword, placeholder: "search" %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        </div>

        <%# タグ検索フォーム表示 %> 
        <div class="search_form">
          <%= form_with url: "#" do |form| %>
            <%= form.text_field :keyword, placeholder: "search" %>
            <i class="fa-solid fa-tag"></i>
          <% end %>
        </div>

      </div>
    </div>
  </nav>
</header>