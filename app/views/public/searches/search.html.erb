<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <% if @records.present? %>
        <% if @model == 'user' %>
          <h4><strong><%= @content %>の検索結果一覧</strong></h4>
            <%= render 'public/users/index', users: @records %>
        <% elsif @model == 'post' %>
          <h4><strong><%= @content %>の検索結果一覧</strong></h4>
            <%= render 'public/posts/index', posts: @records %>
        <% end %>
      <% else %>
        <h4><strong>検索結果がありません</strong></h4>
      <% end %>            
    </div>
  </div>
</div>