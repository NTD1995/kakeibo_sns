<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h5 style="margin: 0;"><strong>コメント入力欄</strong></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with(model: [post, post_comment], local: false) do |f| %>
        <div id="comments-error">
          <%= render "public/shared/error_messages", resource: @post, post_comment: @post_comment  %>
        </div>
        <div class="form-group">
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここへ", class: "form-control" %>
        </div>
        <%= f.submit "コメントする", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div> 