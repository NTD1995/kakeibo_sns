<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>投稿詳細</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>名前</th>
            <th>日付</th>
            <th>内容</th>
            <th>収支区分</th>
            <th>金額</th>
            <th>項目</th>
            <th>メモ</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @post.user.name %>
            </td>
            <td><%= @post.created_at.strftime("%Y年%m月%d日") %></td>
            <td><%= @post.content %></td>
            <td>
              <%= @post.category == "expense" ? "支出" : "収入" %>
            </td>
            <td>
              <% price = @post.category == "expense" ? "-#{@post.price}" : @post.price %>
              <%= number_to_currency(price, delimiter: ",") %>
            </td>
            <td><%= @post.item.name %></td>
            <td><%= @post.memo %></td>
            <td class="post-comments-counter">
              <%= render "public/post_comments/counter", post: @post %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="post-comments-index">
        <%= render 'public/post_comments/index', post: @post, post_comment: @post_comment %>
      </div>
        <%= render 'public/post_comments/form', post: @post, post_comment: @post_comment %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <% if @post.user == current_user %>
        <%= link_to '投稿一覧に戻る', posts_path, class: "btn btn-primary mr-2" %>
        <%= link_to '編集する', edit_post_path(@post), class: "btn btn-success" %>
      <% end %>  
    </div>
  </div>

</div>