<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>新規投稿</strong></h4>    
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @post, url: posts_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: @post %>
        <%= f.hidden_field :user_id, value: current_user.id %>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :created_at, "日付" %>
          </div>
          <div class="col-lg-9">
            <%= f.date_field :created_at, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :content, "内容" %>
          </div>
          <div class="col-lg-9">
            <%= f.text_field :content, class: "form-control", placeholder: "例: 食費" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :category, "収支区分" %>
          </div>
          <div class="col-lg-9">
            <%= f.radio_button :category, :income, checked: @post.category == "income" %> 収入
            <%= f.radio_button :category, :expense, checked: @post.category == "expense" %> 支出
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :price, "金額" %>
          </div>
          <div class="col-lg-9">
            <%= f.number_field :price, class: "form-control", placeholder: "0" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :item_id, "項目" %>
          </div>
          <div class="col-lg-9">
            <%= f.select :item_id, options_from_collection_for_select(Item.all, :id, :name, @post.item_id),{}, class: "form-control", style: 'max-width: 200px;' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :memo, "メモ" %>
          </div>
          <div class="col-lg-9">
            <%= f.text_area :memo, class: "form-control", placeholder: "メモを入力", style: "height: 100px;" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3"></div>
          <div class="col-lg-9">
            <%= f.submit "新規投稿", class: "btn btn-success", style: "padding: 5px 60px;" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
