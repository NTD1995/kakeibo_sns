<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>名前</th>
            <th>日付</th>
            <th>内容</th>
            <th>金額</th>
            <th>項目</th>
            <th>コメント数</th>            
          </tr>
        </thead>
        <tbody>
          <% posts.each do |post| %>
            <tr>
              <td>
                <%= post.user.name %>
              </td>
              <td><%= post.created_at.strftime("%Y年%m月%d日") %></td>
              <td>
                <%= link_to post.content, post_path(post) %>
              </td>
              <td> 
                <% price = post.category == "expense" ? "-#{post.price}" : post.price %>
                <%= number_to_currency(price, delimiter: ",") %>
              </td>
              <td><%= post.item.name %></td>
              <td><%= post.post_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate posts %>
    </div>
  </div>
  
</div>
