<% if post.favorited_by?(user) %>
  <%= link_to admin_favorite_path(id: post.id, user_id: user.id), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to admin_favorites_path(post_id: post.id, user_id: user.id), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>