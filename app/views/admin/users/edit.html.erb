<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>ユーザー編集</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
        <%= render "admin/shared/error_messages", resource: @user %>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :user_id do %>
              <strong>ユーザーID</strong>
            <% end %>
          </div>
          <div class="col-lg-9">
            <%= @user.id %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :image do %>
              <strong>ユーザー画像</strong>
            <% end %>            
          </div>
          <div class="col-lg-9">
            <%= f.file_field :image %>
            <% if @user.image.attached? %>
              <div class="mt-2">
                <%= image_tag @user.image, width: 150 %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :name do %>
              <strong>名前</strong>
            <% end %>
          </div>
          <div class="col-lg-9">
            <%= f.text_field :name, class: "form-control", style: 'max-width: 200px;', value: @user.name %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :introduction do %>
              <strong>自己紹介文</strong>
            <% end %>
          </div>
          <div class="col-lg-9">
            <%= f.text_area :introduction, class: "form-control", style: 'max-width: 200px; height: 100px;' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :email do %>
              <strong>メールアドレス</strong>
            <% end %>
          </div>
          <div class="col-lg-9">
            <%= f.email_field :email, class: "form-control", style: 'max-width: 200px;', value: @user.email %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-3">
            <%= f.label :is_active do %>
              <strong>ユーザーステータス</strong>
            <% end %>
          </div>
          <div class="col-lg-9">
            <%= f.radio_button :is_active, true %>
            <%= label_tag :customer_is_active_true, "有効", class: "font-weight-bold text-success" %>
            <%= f.radio_button :is_active, false %>
            <%= label_tag :customer_is_active_false, "退会", class: "font-weight-bold text-black-50" %>
          </div>
        </div>        
 
        <div class="row">
          <div class="col-lg-12 d-flex justify-content-center">
            <%= f.submit "更新", class: "btn btn-success" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>

</div>
