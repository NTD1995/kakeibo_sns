<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>ルーム詳細</strong></h4>
    </div>
  </div>

  <hr>

  <!-- メッセージ一覧 -->
  <h5><strong>メッセージ一覧</strong></h5>

  <div class="chat">
    <div class="chats">
      <% if @messages.present? %>
        <% @messages.each do |message| %>
          <div class="row my-3">
            <div class="col-lg-12">
                <!-- 他ユーザーのメッセージ -->
                <div class="chat-fukidashi text-start">
                <div><%= message.id %></div>
                <div><%= message.user.id %></div>
                <div><%= message.user.name %></div>
                <div><%= message.content %></div>
                  <%= link_to '削除する', admin_room_message_path(@room, message), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
                </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center mt-4">メッセージはありません。</p>
      <% end %>
    </div>
  </div>

  <hr>

  <!-- 戻るボタン -->
  <div class="row mt-3">
    <div class="col-lg-12">
      <%= link_to "ルーム一覧に戻る", admin_rooms_path, class: "btn btn-primary" %>
    </div>
  </div>

  <!-- ルーム削除ボタン -->
  <div class="row mt-3">
    <div class="col-lg-12">
      <%= link_to 'ルームを削除する', admin_room_path(@room), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
    </div>
  </div>
  
</div>
