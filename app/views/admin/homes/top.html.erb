<h1>管理者トップページ（投稿一覧）</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>投稿者</th>
      <th>日付</th>
      <th>内容</th>
      <th>金額</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= post.content %></td>
        <td><%= number_to_currency(post.price, delimiter: ",") %></td>
        <td><%= link_to "編集", edit_admin_post_path(post), class: "btn btn-primary" %></td>
        <td>
          <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規投稿", new_admin_post_path, class: "btn btn-success" %>
