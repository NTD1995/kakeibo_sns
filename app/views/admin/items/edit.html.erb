<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>項目編集</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with(model: @item, url: admin_item_path(@item), method: :put, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :name, '項目名', class: 'font-weight-bold' %>
          <%= form.text_field :name, class: 'form-control', style: 'max-width: 200px;' %>
        </div>

        <div class="form-group">
          <%= form.label :category, '収支区分', class: 'font-weight-bold' %>
          <%= form.select :category, options_for_select(['支出', '収入'], @item.category), class: 'form-control' %>
        </div>

        <div class="d-flex gap-2 mt-3">
          <%= form.submit '更新', class: 'btn btn-primary' %>
          <%= link_to '項目一覧に戻る', admin_items_path, class: 'btn btn-secondary' %>
          <%= button_to '削除', admin_item_path(@item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
