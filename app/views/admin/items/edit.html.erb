<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>項目編集</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with(model: @item, url: admin_item_path(@item), method: :put, local: true) do |form| %>
        <%= render "admin/shared/error_messages", resource: @item %>
        
        <div class="form-group">
          <%= form.label :name, '項目名', class: 'font-weight-bold' %>
          <%= form.text_field :name, class: 'form-control', style: 'max-width: 200px;' %>
        </div>

        <div class="form-group">
          <%= form.label :category, '収支区分', class: 'font-weight-bold' %>
          <%= form.select :category, Item.categories.keys.map {|k| [I18n.t("enums.item.category.#{k}"), k]},{} ,{ class: 'form-control', style: 'width: 200px;' } %>
        </div>

        <div class="d-flex mt-3">
          <%= form.submit '更新する', class: 'btn btn-success mr-2' %>
          <%= link_to '削除する', admin_item_path(@item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger mr-2' %>
          <%= link_to '項目一覧に戻る', admin_items_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
